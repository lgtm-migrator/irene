<div local-class='org-email-domain'>
  <AkTypography @variant='h5' @gutterBottom={{true}}>
    {{t 'emailDomainRestriction'}}
  </AkTypography>

  <AkTypography
    @gutterBottom={{true}}
    @variant='body2'
    @color='textSecondary'
    data-test-organization-email='sub-desc'
  >
    {{t 'emailRestrictDesc'}}
  </AkTypography>

  {{#if @isEditable}}
    <div
      class='flex-row flex-align-end w-9/12 mt-3'
      data-test-organization-email='input-container'
    >
      <AkTextField
        @label='Added email domains'
        @labelTypographyColor='textPrimary'
        @labelTypographyVariant='subtitle1'
        @value={{this.tDomain}}
        @placeholder='example.com'
        aria-label='domain input'
        data-test-organization-email='input'
      />

      <AkButton
        {{on 'click' this.saveDomainInput}}
        @disabled={{this.isDisableSave}}
        @class='mx-2'
        data-test-organization-email='save-btn'
      >{{t 'addDomain'}}</AkButton>
    </div>
  {{/if}}

  <ul local-class='domain-list' data-test-organization-email='domain-list'>
    {{#each this.domains as |domain seq|}}
      <li
        class='margin-top10'
        local-class='domain'
        data-test-organization-email='domain'
      >
        <span local-class='domain-name'>
          {{domain.domainName}}
        </span>
        {{#if @isEditable}}
          <button
            class='is-secondary is-icon no-border'
            type='button'
            local-class='delete'
            {{on 'click' (perform this.deleteDomain domain)}}
            data-test-organization-email='delete-{{seq}}'
          >
            <AttachTooltip @placemnet='top'>
              {{t 'deleteDomain'}}
            </AttachTooltip>
            {{fa-icon 'remove'}}
          </button>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>