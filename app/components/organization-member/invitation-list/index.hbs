{{! template-lint-disable no-partial }}
{{#if this.hasObjects}}
  <div class='my-2'>
    <AkTypography @variant='h5'>
      {{t 'pendingInvitations'}}
    </AkTypography>
  </div>

  <div>
    <AkTable as |t|>
      <t.head @columns={{this.columns}} />
      <t.body @rows={{this.sortedObjects}} as |b|>
        <b.row as |r|>
          <r.cell as |value|>
            {{#if r.columnValue.component}}
              {{#let (component r.columnValue.component) as |Component|}}
                <Component
                  @invitation={{r.rowValue}}
                  @organization={{@organization}}
                />
              {{/let}}
            {{else}}
              {{value}}
            {{/if}}
          </r.cell>
        </b.row>
      </t.body>
    </AkTable>
  </div>

  <div class='columns'>
    <div class='column'>
      <div class='margin-t-h'>
        {{partial 'paginate'}}
      </div>
    </div>
  </div>
{{/if}}